{
   "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   "title": {"text": "Number of Incidents per Quarter", "color": "white"},
   "width": 300,
   "height": 327,
   "padding":0,
   "background":"#161a1d",
   "config": {"legend": {"disable": true}},   
   "data":{
       "url":"https://raw.githubusercontent.com/JackECameron/FIT3179/main/D2_resources/data/responseTimes/combinedLong_barchart.csv"
    },
    "layer": [
      { "mark": {"type": "bar", "cornerRadiusTopLeft": 10, "cornerRadiusTopRight": 10, "fillOpacity":0.75, "strokeOpacity": 0.5, "stroke": "white", "strokeWidth":2},
      "transform": [{"filter": "datum.sTag != 'agr'"}, {"filter": "datum.sNumber == 10"},
      {
        "calculate": "if(datum.incType === 'nonInc', 0, if(datum.incType === 'emInc', 1, 2))",
        "as": "sortBy"
      }],
      "encoding": {
        "x": {"field": "q", "type": "ordinal", "axis": {"labelColor":"white", "titleColor": "white"}},
        "y": {"field": "numInc", "aggregate": "sum", "axis": {"labelColor":"white", "titleColor": "white"}},
        "color": {"field": "incType", "scale": {"range": ["#ffc300", "#e63946"]}},
        "order": {"field": "sortBy"},
        "tooltip":[
         {
            "field":"incType",
            "type":"nominal",
            "title":"Incident Type"
         },
         {
            "field":"numInc",
            "type":"quantitative",
            "title":"Number of Incidents"
         }
      ]
      }
   },
   { "mark": {"type": "line", "interpolate": "linear", "strokeOpacity":0.75, "strokeCap": "round", "strokeWidth": 7.5},
   "transform": [{"filter": "datum.sTag == 'agr'"}, {"filter": "datum.servArea == 'CENTRAL'"}],
   "encoding": {
     "x": {"field": "q", "type": "ordinal", "axis": {"labelColor":"white", "titleColor": "white", "title": "Financial Quarter"}},
     "y": {"field": "numInc", "aggregate": "sum", "axis": {"labelColor":"white", "titleColor": "white", "title": "Number of Incidents"}},
     "color":{"field": "incType", "scale":{"range": ["yellow", "red"]}},
     "tooltip":[
      {
         "field":"incType",
         "type":"nominal",
         "title":"Incident Type"
      }
   ]
   }
},
{ "mark": {"type": "circle", "strokeOpacity":0.75, "strokeCap": "round", "size": 100},
"transform": [{"filter": "datum.sTag == 'agr'"}, {"filter": "datum.servArea == 'CENTRAL'"}],
"encoding": {
  "x": {"field": "q", "type": "ordinal", "axis": {"labelColor":"white", "titleColor": "white", "title": "Financial Quarter"}},
  "y": {"field": "numInc", "aggregate": "sum", "axis": {"labelColor":"white", "titleColor": "white", "title": "Number of Incidents"}},
  "color":{"field": "incType", "scale":{"range": ["yellow", "red"]}},
  "tooltip":[
   {
      "field":"incType",
      "type":"nominal",
      "title":"Incident Type"
   }
]
}
}
    ],
    "resolve": {"scale": {"color": "independent"}}
  
 }