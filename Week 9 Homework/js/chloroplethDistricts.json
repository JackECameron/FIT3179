{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of Stations per FRC District",
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "layer": [
      { "data": {
      "url": "https://raw.githubusercontent.com/JackECameron/FIT3179/main/Week%209%20Homework/js/finalSimplified.json",
      "format": {"type": "topojson", "feature": "FRV_DISTRICT"}
    },
    "transform": [
      {
        "lookup": "properties.DISTRICT",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/JackECameron/FIT3179/main/Week%209%20Homework/data/formattedFRV.csv"
          },
          "key": "District",
          "fields": ["Percent_Standards_Met"]
        }
      },
        //{"calculate": "datum.Percent_Standards_Met", "as": "Perc1"}
        {"aggregate": [{"op": "mean", "as": "Perc"}]}

    ],
    "mark": {"type": "geoshape", "stroke": "black", "strokeWidth":0.75},
    "encoding": {
      "color": {
        "field": "Perc",
        "type": "quantitative",
        "scale": {"type": "linear"}
      },
      "tooltip": [
        {"field": "properties.DISTRICT", "type": "nominal", "title": "FRV District"},
        {"field": "Perc", "type": "quantitative"}
      ]
    }
    }, 
    {
      "data": {
        "url": "https://raw.githubusercontent.com/JackECameron/FIT3179/main/Week%209%20Homework/js/LOCALITY_POLYGON.json",
        "format": {"type": "topojson", "feature": "LOCALITY_POLYGON"}
      },
      "mark": {"type": "geoshape","fill": null, "stroke": "black", "strokeWidth": 0.1, "opacity":0.6}
    }


  ]
}
